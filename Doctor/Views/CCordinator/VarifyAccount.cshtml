
@{
    ViewBag.Title = "Verified Account";
}

<h2>Verified Account</h2>
<div class="row">
    <div class="col-md"></div>
    <div class="col-md text-center">
        @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
        {
            <div class="alert alert-success">
                <p><strong>Congress! </strong>@ViewBag.Message</p>
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <p><strong>Sorry! </strong>@ViewBag.Message</p>
            </div>
        }
        @using (Html.BeginForm("Login", "CCordinator"))
        {
            <button type="submit" class="btn btn-outline-success btn-block"> Login Here</button>
        }
    </div>
    <div class="col-md"></div>
</div>
